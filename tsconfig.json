{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "es2022",
    "target": "es2021",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["src", "include"],
  "exclude": ["node_modules"]
}